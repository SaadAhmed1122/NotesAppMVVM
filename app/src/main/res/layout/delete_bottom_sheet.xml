<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottomcheet"
    android:gravity="center"
    android:layout_height="wrap_content">


    <View
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:layout_height="7dp"
        android:background="@drawable/delete_indicator_shap"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete \n this Note?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:textColor="@color/black"
        android:id="@+id/nobtn"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/no_button_shape"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="18dp"
        android:id="@+id/yesbtn"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/yes_button_shape"
        android:padding="10dp"
        />
</LinearLayout>